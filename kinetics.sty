 \storekeys{ul,ll,lr,ur,u,l}%
 \ensuremath{%
    \modifierDiffOuter{%
      \modifierSkewOuter{%
	\SymbolMarkup[
	    ul=\storedkey{ul},
	    ll=\storedkey{ll},
	    lr=\storedkey{lr},
	    ur=\storedkey{ur},
	    u=\storedkey{u},
	    l=\storedkey{l}
	]{\modifierDiffInner{\modifierSkewInner{#1}}}%
      }%
    }%
  }%
}




