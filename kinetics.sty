\newcommand{\vectorcomponentsformatter}[3]{%
 \commandkeyblankt{base}{%
  \begin{pmatrix}%
    #1 \\%
    #2 \\%
    #3
   \end{pmatrix}_{\checkkey{expressedIn}}%
  }{%
    \let\mystack\undefined%
    \renewcommand*{\do}{\stepcounter{tempcountNN}}%
